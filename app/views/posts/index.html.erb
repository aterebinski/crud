<h3>Lista wpisów</h3>

<p><%= link_to "Dodaj nowy wpis", new_post_path, class: "btn btn-success" %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Tytuł</th>
      <th>Autor</th>
      <th>Opublikowany?</th>
      <th>Treść</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each { |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title.html_safe %></td>
        <td><%= post.author %></td>
        <td><%= post.published ? "Tak" : "Nie" %></td>
        <td><%= post.body %></td>
        <td>
          <%= link_to "Pokaż", post_path(post), class: "btn btn-primary btn-sm" %>
          <%= link_to "Edytuj", edit_post_path(post), class: "btn btn-secondary btn-sm" %>
        </td>
      </tr>
      <% } %>
  </tbody>
</table>
